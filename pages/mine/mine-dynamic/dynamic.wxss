.info {
  width: 100%;
  height: 100rpx;
  position: relative;
  margin: 20rpx;
  margin-left: 5%;
}

.info>image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.name {
  position: absolute;
  left: 110rpx;
  top: 20rpx;
  font-size: 9pt;
  color: #777777;
}
.infoText{
  width: 85%;
  margin-left: 5%;
  color: #777777;
  font-size: 10pt;
}

.img-container {
  display: flex;
  width: 100%;
  margin: 20rpx;
}

.dynamicImg {
  width: 200rpx;
  height: 240rpx;
  margin: 0 20rpx;
}
.dynamicImg > image{
  height: 100%;
}
.function {
  width: 100%;
  height: 100rpx;
  margin-top: 10rpx;
  position: relative;
  margin: 20rpx;
}

.comment {
  width: 180rpx;
  height: 100rpx;
  position: relative;
}

.comment>image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
  margin-left: 5%;
}

.comment>text {
  position: absolute;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  color: #515151;
  font-size: 30rpx;
  text-align: center;
  margin-left: 10rpx;
}

.collect {
  width: 180rpx;
  height: 100rpx;
  position: absolute;
  top: 0rpx;
  left: 200rpx;
}

.collect>image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
}

.collect>text {
  position: absolute;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  color: #515151;
  font-size: 30rpx;
  text-align: center;
  margin-left: 10rpx;
}

.parting {
  height: 20rpx;
  margin-left: 0rpx;
  width: 100%;
  background-color: #bfbfbf;

}