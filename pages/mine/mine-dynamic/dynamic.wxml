<view wx:for="{{dynamic}}" wx:key="id">
	<view class="info">
		<image src="{{item.avatar}}"></image>
		<view class="name">{{item.author}}</view>
	</view>
  <view class="infoText"><text>{{item.content}}</text></view>
 <view class="img-container">
	 <view class="dynamicImg" wx:for="{{item.imgUrl}}" wx:for-item="img" wx:key="k">
		<image mode="scaleToFill" src="{{img}}"></image>
	</view>
</view>
	<view class="function">
		<!-- 评论 -->
		<view class="comment">
			<image mode="scaleToFill" src="http://qbgf6efcq.bkt.clouddn.com/image/index/pinglun.png"></image>
			<text>355</text>
		</view>
		<!-- 收藏 -->
		<view class="collect">
			<image mode="scaleToFill" src="http://qbgf6efcq.bkt.clouddn.com/image/index/shoucang.png"></image>
			<text>466</text>
		</view>
	</view>
</view>