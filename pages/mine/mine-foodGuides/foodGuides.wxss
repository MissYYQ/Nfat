/* pages/mine/mine-foodGuides/foodGuides.wxss */
view
{
font-family: monospace;
font-size: large;
}
.foodGuides_top
{
  width: 100%;
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}
.foodGuides_topContent
{
  width:100%;
  flex:1;
  display:flex;
  justify-content:center;
  align-self:center;
  flex-direction: column;
}
.foodGuides_topContent>view
{
  display:flex;
  justify-content:center;
  align-items:center;
}
.foodGuides_topTab
{
  display:flex;justify-content:center;width:100%;flex:0 0 auto;
}
.nomalTab
{
  display:flex;justify-content:center;color:#aaa4ae;width: 33%;height:80rpx;flex-direction: column;
}
.nomalTab>view:last-child
{
  display:none;width:15px;margin-top:4px;height:1px;background-color:white;align-self:center;
}
.tab_active
{
  display:flex;justify-content:center;color:white;width: 33%;height:80rpx;flex-direction: column;
}
.tab_active > view
{
  display: block;width:15px;margin-top:4px;height:1px;background-color:white;align-self:center;
}
.recipeDisplay
{
  margin-top: 10px;
  width:100%;
  flex:1;
  display:flex;
  justify-content:center;
  align-self:center;
  background-color:white;
  font-weight: bold;
}
.recipeDisplay>view
{
  width:100%;
  flex:1;
  display:flex;
}
.recipeDetail
{
  flex:1;
  flex-direction: column;
  display:flex;
  justify-content:center;
  align-self:center;
  width:90%;
}
.recipeDetail_in
{
  color:#666666;
  display: flex;
  font-size: small;
}
.recipeDetail_in>view:first-child
{

  width: 20%;
  display: flex;
  align-items:center;
}
.recipeDetail_in>view:last-child
{
  width: 80%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px #efefef solid;
  font-size:smaller;
  font-weight: lighter;
  
}
.recipeDetail_in>view:last-child>view
{
  display: flex;width: 100%;
}
.binaji
{
  position: absolute;
  right:0;
  top: 10rpx;
  color:#24c68a;
}
.recipeDetail_bottom>view:first-child
{
  width: 20%;
  display: flex;
  align-items:center;
}
.recipeDetail_bottom>view:last-child
{
  width: 80%;
  display: flex;
  font-weight: bold; 
}
.recipeDetail_bottom
{
  width: 100%;
  font-weight: bold;
  font-size: 35rpx;
  display: flex;
  font-family: 'SimSun';
  
}