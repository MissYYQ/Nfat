}

.mine-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  height: fit-content;
}

.circle {
  height: 128rpx;
  width: 128rpx;
  border-radius: 50%;
}

.mine-item {
 flex-grow: 1;
 text-align: center;
 display: flex;
 flex-direction: column;
 justify-content: space-around;
 align-items: center;
 position: relative;
}

.username {
  font-size: 36rpx;
}
.sport-tip {
  color: #fff;
  background-color: blueviolet;
  border-radius: 50rpx;
  width: fit-content;
  padding: 2rpx 48rpx;
  margin-top: 4rpx;
}

.text-strong {
  font-size: 1.3em;
  font-weight: 600;
}

.mine-item .icon-right {
  color: #999;
  align-self: flex-end;
  font-size: 20px;
}
.mine-item .left {
  align-self: flex-start;
}
.mine-item .center {
  align-self: center;
}
.mine-item .small-text {
  font-size: small;
  color: #999;
}
.space5 {
  margin: 10rpx;
}

.mine-item .title {
  font-size: 36rpx;
}

.box-shadow {
  background-color: #fff;
  box-shadow: 0 0 10rpx 0 #f6f6f6;
  border-radius: 10rpx;
  margin: 10rpx;
}

.coin {
  position: absolute;
  top: 8rpx;
  right: 24rpx;
  width: 32rpx;
  height: 32rpx;
}

.hide {
  display: none;
}

.swiper-container {
  padding: 20rpx;
  height: 150rpx;
}

.swiper-container swiper {
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}


/* mine-data */
.mine-data {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.mine-data-one {
  display: flex;
  flex: 1;
  margin-bottom: 10rpx;
  width: 170rpx;
}

.mine-data-noe-num {
  width: 150rpx;
  font-weight: bold;
  text-align: center;
  font-size: 10pt;
}

.mine-data-noe-name {
  width: 150rpx;
  margin-top: 50rpx;
  text-align: center;
  margin-left: -150rpx;
  color: #888;
  font-size: 8pt;
}

.mine-data>image {
  width: 35rpx;
  height: 35rpx;
  position: relative;
  right: 65rpx;
}

