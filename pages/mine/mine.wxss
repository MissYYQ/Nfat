

page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.mine-container {
  /* display: flex; */
  /* flex-direction: column; */
  /* color: black; */
  /* font-size: 9pt; */
  height: 100%;
  width: 100%;
  /* align-items: center; */
