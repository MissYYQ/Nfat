.mine-data-two {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 10rpx;
}

.mine-data-two-data {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mine-data-two-name {
  font-size: 11pt;
}

.mine-data-two-text {
  color: #888;
  font-size: 8pt;
  margin-top: 20rpx;
}

.mine-data-two-num {
  font-size: 12pt;
  margin-right: 12rpx;
  font-weight: bold;
}

.mine-data-two-numtext {
  font-size: 9pt;
  margin-top: 9rpx;
}

.mine-data-two-data>image {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.7;
}

.mine-data-two-data:first-child image {
  position: relative;
  right: -60%;
  top: -75%;
  margin-right: 10rpx;
}

.mine-data-two-data:last-child image {
  position: relative;
  right: -60%;
  top: -75%;
  margin-right: 10rpx;
}
