page{
  padding-bottom: 90rpx;
}
.detail_swiper swiper{
  /* 使图片和宽度一样 */
  height: 70vw;
  text-align: center;
}

.detail_swiper swiper image{
  width: 60%;
}

.goods_price_row{
  display: flex;
  align-items: center;
}

.goods_price{
  color:red;
  padding:15rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.highPrice{
  text-decoration: line-through;
  color:rgba(200,200,200,1);
  padding:15rpx;
}

.newUser{
  border:1rpx red solid;
  padding: 5rpx 10rpx;
  color:red;
}

.goods_name_row{
  display: flex;
  border-bottom: 5rpx solid #dedede;
  border-top: 5rpx solid #dedede;
  padding: 10rpx 0;
}

.goods_name{
  flex:5;
  color:#000;
  font-size: 30rpx;
  padding:0 10rpx;

  /* 以下四行代码是给溢出的文字加···效果 */
  display: -webkit-box;
  overflow:hidden;
  -webkit-box-orient:vertical;
  /*第几行出现···  */
  -webkit-line-clamp: 2;
}
.goods_collect{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left:1rpx solid #000;
}


/* 底部工具栏样式 */
.btm_tool{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top:2rpx solid #ccc;
}
.tool_item{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  position: relative;
}

.tool_item button{
  position: absolute;
  left: 0;
  bottom:0;
  width: 100%;
  height: 100%;
  opacity:0;
}

.btn_cart{
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btn_buy{
  flex: 2;
  background-color: #29CB94;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
