/* pages/goods_list/index.wxss */
.first_tab{
  width: 90%;
  margin: 0 auto;
}

.goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}
.first_tab .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img_wrap image {
  width: 80%;
}
.first_tab .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  font-size: 30rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .goods_info_wrap .goods_price {
  color: red;
  font-size: 36rpx;
}

.tip{
  color:#ccc;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:15rpx 0;
}