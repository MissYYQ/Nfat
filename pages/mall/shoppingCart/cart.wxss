/* 购物车样式 */

/* 未选中样式 */
checkbox .wx-checkbox-input {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: white;
  border: 1px solid #24c789;
}

/* 选中后的样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  width: 50rpx;
  height: 50rpx;
  border: none;
  background: #24c789;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 50rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 50rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 50rpx;
  text-align: center;
  font-size: 35rpx;
  /* 对勾大小*/
  font-weight: bold;
  /* 对勾加粗*/
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.cart_title_row{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: #24c789 solid 1rpx;
  padding: 20rpx;
  align-items: center;
}

.cart_title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding:5rpx;
}

.cart_manage{
  color: rgb(99,85,107);
  font-size: 33rpx;
  font-weight: 600;
  padding:5rpx;
}

.cart_empty{
  margin-top:calc(25vh);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cart_empty image{
  width: 50%;
}

.cart_main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods_item {
  /* width: 94%; */
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  /* border-radius:15rpx; */
}

.item_check {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item_img image {
  width: 80%;
}

.item_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.item_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  font-size: 30rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goods_info{
  padding: 15rpx 0;
  color: #ccc;

}

.item_info .goods_price_wrap {
  display: flex;
  /* 白边环绕 */
  justify-content: space-between;
}

.goods_price {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--themeColor);
}

.cart_num_tool {
  display: flex;
}

.num_btn:before{
  border:none;
}
.num_btn{
  background-color: #fff;
  width: 56rpx;
  height: 56rpx;
  color: #000;
  border-radius: 50%;
  line-height: 56rpx;
  text-align: center;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  border:1rpx solid #ccc;

}
.bg_gray{
  background-color: #ccc;
}


.goods_num {
  width: 56rpx;
  height: 56rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}


/* 底部工具栏样式 */
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}

.all_check {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
}

.total_price_wrap {
  flex: 5;
  padding-right: 15rpx;
  /* text-align: right; */
  height: 100%;
  line-height: 90rpx;
  text-align: right;
}

.total_price_wrap text:first-child {
  font-size: 32rpx;
  font-weight: 600;
}


.total_price {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}

.order_pay_wrap,.goods_del{
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods_del{
  background-color: rgba(41,203,148,0.5);
}
.goods_del_active{
  background-color: var(--themeColor);
}