<view class="goodsCates">
  <SearchInput></SearchInput>
  <view class="cates_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y class="left_menu">
      <view wx:for="{{menu}}"
      wx:key="menu1"
      data-index="{{index}}" class="menu_item {{goodsType_id===index?'menu_active':''}}" bindtap="onClickCates"
      
      >
      {{item}}
      </view>
    </scroll-view>
    <!-- 右侧菜单 -->
    <scroll-view scroll-top="{{top}}" scroll-y class="right_menu">
      <view class="goods_group"
      wx:for="{{rightContent}}"
      wx:for-item="item1"
      wx:for-index="index1"
      wx:key="goods_group"
      >
        <view class="goods_title">
          <text class="title_text">/</text>
          <text>{{item1.cat_name}}</text>
          <text class="title_text">/</text>
        </view>
        <view class="goods_list">
          <navigator 
        wx:for="{{item1.children}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="cat_id"
        url="/pages/mall/goodsList/list?cid={{item2.cat_id}}"
        >
            <image mode="widthFix" src="{{item2.cat_icon}}" />
            <view class="goods_name">{{item2.cat_name}}</view>
          </navigator>
        </view>
      </view>
    </scroll-view>

  </view>
</view>