page {
  height: 100%;
}

.goodsCates {
  height: 100%;
}

.cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}

.left_menu {
  flex: 2;
}

.menu_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.menu_active{
  color:var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.right_menu {
  flex: 5;
}


.goods_title{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 11pt;
}
.title_text{
  color: #ccc;
  padding: 0 10rpx;
}

.goods_list{
  display: flex;
  flex-wrap:wrap;
}
.goods_list navigator{
  width:33.33%;
  text-align: center;
}

.goods_list navigator>image{
  width:50%;
}

