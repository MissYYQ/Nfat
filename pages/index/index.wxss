.hot-content{
  width: 48%;
  height: 240px;
  background-color:white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  /* border: 2rpx solid #ccc; */
  box-shadow: 1rpx 1rpx 1rpx 1rpx #4c4c4c;
  display: flex;
  flex-direction: column;
}

.hot-content:nth-child(odd){
  margin-right: 2%;
}
.hot-content:nth-child(even){
  margin-left: 2%;
}



.hot-content-img {
  width: 100%;
  height: 160px;
  border-radius: 2%;
}

.hot-content-text {
  width: 135px;
  height: 40px;
  margin-left: 10px;
  margin-top: 10px;
  overflow: hidden;
  font-size: 10pt;
}

.hot-content-info {
  margin-left: 10px;
  position: relative;
}

.hot-content-info>image:first-child {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  position: absolute;
} 

 .hot-content-info>text {
  font-size: 24rpx;
  position: absolute;
  left: 30px;
  /* bottom: 7px; */
  color: #515151;
}

.like-img {
  position: absolute;
  left: 80px;
  height: 40rpx;
  width: 40rpx;
  /* bottom: 10rpx; */
}
.like {
  position: absolute;
  left: 100px;
  color: #515151;
  font-size: 24rpx;
  /* bottom: 5px; */
}


