page {
  width: 100%;
  height: 100%;
}

icon {
  font-size: 20px;
  color: #999;
}

.train {
  background-color: #f8f8f8;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.train .myClass,
.train .recommend {
  border-radius: 5px;
  margin: 5px 10px;
  background-color: #fff;
  box-shadow: 0 0 5px #f0f0f0;
}

 .classAll {
  font-size: 12px;
  font-weight: 400;
  color: #fff;
  background-color: #2FCA90;
  border-radius: 50rpx;
  padding: 0 30rpx;
  /* margin-top: 5rpx; */
}

 .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  line-height: 70rpx;
  padding: 0 10px;
}

.header .title {
  font-size: 14px;
}

.header .tool {
  color: #999;
} 

.header .tool icon {
  padding: 0 5px;
}

.myClass .list {
  display: flex;
  align-items: center;
  height: 170rpx;
  padding: 0 10px;
  justify-content: space-between;
  border-top: .5px solid #eee;
}
.myClass .list image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 10rpx;
  box-shadow: 5px 0 1px -2px rgba(0,0,0,.25);
  border: .5px solid #eee;
}
.myClass .list .tip {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  height: 96rpx;
  width: 240rpx;
}

.tip{
  margin-left: -150rpx;
}

.myClass .list .tip>view:first-child {
  font-size: 15px;
  color: #333;
}
.myClass .list .tip>view:last-child {
  font-size: 12px;
  color: #ccc;
}

.recommend .content {
  height: 230rpx;
  padding: 0 10px;
}

.recommend .content swiper {
  height: inherit;
}

.recommend .content swiper swiper-item {
  overflow: visible;
  display: flex;
  align-items: center;
}

.item {
  margin-right: 5px;
  position: relative;
  width: fit-content;
  font-size: 0;
}
.item image {
  width: 440rpx;
  height: 220rpx;
  border-radius: 5px;
}
.item .mask {
  position: absolute;
  bottom: 0;
  background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.25));
  width: 100%;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  font-size: 14px;
  color: #fff;
}
