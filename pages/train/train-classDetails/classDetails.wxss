.classSrc image{
  width: 100%;
  height: 380rpx;
}
.classSrc video{
  width: 100%;
  height: 400rpx;
}
.classDetails{
  margin: 18rpx 40rpx;
}
.title {
  font-size: 18pt;
  color: black;
  margin-bottom: 18rpx;
}
.introduce{
  font-size: 10pt;
  color: #777;
}
.icon, .icon_text{
  display: flex;
  flex-direction: row;
}
.icon > image {
  flex: 1;
  width: 65rpx;
  height: 65rpx;
  margin-right: 110rpx ;
  margin-top: 40rpx;
  margin-left: 15rpx;
}
.icon_text > text{
  flex: 1;
  width: 65rpx;
  height: 65rpx;
  margin-right: 110rpx ;
  margin-top: 5rpx;
  padding-bottom: 30rpx;
  text-align: center;
  color: #777;
}
.icon >image:first-child{
  margin-left: 20rpx;
}
.icon_text > text:first-child{
  margin-left: 15rpx;
}
.icon >image:last-child,  .icon_text > text:last-child{
  margin-right: 20rpx;
}
/* 相关推荐 */
.recommend_top{
  display: flex;
  flex-direction: row;
}
.recommend_top > image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 450rpx;
  margin-top: 20rpx;
}
.recommend_title{
  font-size: 12pt;
  color: black;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
}
.recommend_content{
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
}
.recommend_content > image{
  width: 350rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.content_text{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  height: 180rpx;
  justify-content:center;
}
.content_title{
  color: black;
  font-size: 11pt;
}
.content_difficulty{
  color: #777;
  font-size: 9pt;
  margin-top: 10rpx;
}